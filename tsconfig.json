{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",                 // 변경
    "moduleResolution": "Bundler",      // TS5 권장 (또는 "NodeNext")
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "outDir": "dist",
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"],           // 추가: 브라우저 API 타입
    "types": ["vite/client", "node"],   // 추가: Vite 환경/Node 타입
    "jsx": "preserve"                   // Vue에서 필요
  },
  "include": [
    "src/**/*",
    "*.ts"
  ],
  "exclude": ["node_modules", "dist", "out", "chitchat-web"],
}